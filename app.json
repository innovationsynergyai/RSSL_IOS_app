{
  "expo": {
    "name": "Rising Sun Sober Living Portal",
    "slug": "rising-sun-portal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "description": "Official mobile portal for Rising Sun Sober Living - Access forms, resources, and community support.",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.risingsun.portal",
      "buildNumber": "1",
      "requireFullScreen": false,
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "CFBundleDisplayName": "Rising Sun Portal",
        "CFBundleShortVersionString": "1.0.0",
        "CFBundleVersion": "1",
        "ITSAppUsesNonExemptEncryption": false,
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "jotform.com": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionMinimumTLSVersion": "1.2",
              "NSIncludesSubdomains": true,
              "NSExceptionRequiresForwardSecrecy": false
            },
            "hipaa.jotform.com": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionMinimumTLSVersion": "1.2",
              "NSIncludesSubdomains": true,
              "NSExceptionRequiresForwardSecrecy": false
            }
          }
        },
        "NSCameraUsageDescription": "Rising Sun Portal needs camera access to capture photos and documents for forms and verification purposes.",
        "NSMicrophoneUsageDescription": "Rising Sun Portal needs microphone access for voice recordings and video calls with counselors.",
        "NSLocationWhenInUseUsageDescription": "Rising Sun Portal needs location access to provide location-based services and emergency assistance.",
        "NSPhotoLibraryUsageDescription": "Rising Sun Portal needs photo library access to select photos for forms and documents.",
        "NSFaceIDUsageDescription": "Rising Sun Portal uses Face ID for secure authentication and data protection."
      }
    },
    "android": {
      "package": "com.risingsun.portal",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Rising Sun Portal",
      "shortName": "RS Portal",
      "lang": "en",
      "scope": "/",
      "themeColor": "#ffffff",
      "backgroundColor": "#ffffff"
    },
    "extra": {
      "eas": {
        "projectId": "0e9aa5e8-49eb-41f5-8d62-2783db83a90d"
      }
    },
    "owner": "northeastnoir"
  }
}
